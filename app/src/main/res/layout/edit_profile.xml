<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.edit_profile.EditProfile">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"

        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/vw_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/backgroundGrey"

        app:layout_constraintTop_toBottomOf="@+id/title_bar"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/backgroundGrey"
            android:src="@drawable/ic_image_not_available"
            app:shapeAppearanceOverlay="@style/circleImageView" />


        <TextView
            android:id="@+id/tv_account_greetings"
            style="@style/Text.Large.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_account_greetings" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/vw_line_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/backgroundGrey"

        app:layout_constraintTop_toBottomOf="@+id/iv_profile"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp">



        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_full_name"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_full_name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            style="@style/Text.Big.Medium"

            app:layout_constraintTop_toBottomOf="@+id/tv_full_name" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"

            app:layout_constraintTop_toBottomOf="@+id/et_full_name_value"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/sp_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/tv_gender"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthday"

            app:layout_constraintTop_toBottomOf="@+id/sp_gender"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_calendar_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_date"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tv_birthday"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"

            app:layout_constraintTop_toBottomOf="@+id/et_calendar_pick"/>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"

            app:layout_constraintTop_toBottomOf="@+id/tv_address" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_email"

            app:layout_constraintTop_toBottomOf="@+id/et_address"/>

        <EditText
            android:id="@+id/et_email_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"

            app:layout_constraintTop_toBottomOf="@+id/tv_email" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_phone_number"

            app:layout_constraintTop_toBottomOf="@+id/et_email_value"/>

        <EditText
            android:id="@+id/et_phone_number_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"

            app:layout_constraintTop_toBottomOf="@+id/tv_phone_number" />

        <Button
            style="@style/Button.Filled.Yellow.Rounded"
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"

            app:layout_constraintTop_toBottomOf="@+id/et_phone_number_value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llcomp_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/red"
                android:background="@android:color/transparent"
                android:layout_gravity="end"/>

            <DatePicker
                android:id="@+id/dp_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/navy_blue.primary"
                />

            <Button
                android:id="@+id/bt_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:layout_gravity="end"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>