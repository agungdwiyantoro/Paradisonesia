<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_exp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand Title"
                android:layout_weight="4"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_down_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date"
                android:layout_gravity="end"
                android:layout_weight="1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey"

            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/ll_expandable">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/promo"
                android:textColor="@color/blue_0063a7"
                android:textSize="@dimen/_20sdp"
                style="@style/Text.Medium.Bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promo"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>